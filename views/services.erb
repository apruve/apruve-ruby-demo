<%= Apruve.js %>
<script type="text/javascript">
    apruve.setOrder(<%= @order.to_json %>, '<%= @order.secure_hash %>');
    apruve.registerApruveCallback(apruve.APRUVE_COMPLETE_EVENT, function (orderId) {
        $('#tokenField').val(orderId)
        $('#chargeAmount').val(<%= @order.amount_cents %>)
        $('#finishOrder').submit();
    });
    $(function() {
      apruve.setShopper($('#shopperEmail').val());
      $('#shopperEmail').on('blur', function(event) {
        apruve.setShopper($('#shopperEmail').val());
      })
    })
</script>
<div id="thankYou" style="display:none">
  <div class="row">
    <div class="span6 offset3">
      <div class="well-large" style="text-align: center">
        <h1>Your order is ready to place. Click to complete.</h1>

        <form id="finishOrder" action="/finish_subscription" method="POST">
          <input id="tokenField" type="hidden" name="token" value="">
          <input id="chargeAmount" type="hidden" name="charge" value="">
          <input type="submit" value="Submit">
        </form>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div>
    <ul class="nav nav-pills">
      <li>
        <a href="/">Products</a>
      </li>
      <li class="active">
        <a href="/services">Services</a>
      </li>
    </ul>
  </div>
  <h1>
    Your Cart
  </h1>
</div>
<div id="shoppingCart">
  <div class="row-fluid">
    <div class="span12">
        <table class="table table-bordered">
          <thead>
          <tr>
            <th></th>
            <th>Product</th>
            <th>Description</th>
            <th>Price</th>
          </tr>
          </thead>
          <tr>
            <td>
              <img src="/img/legalpaper.jpg" class="productPhoto" />
            </td>
            <td>Monthly Delivery - Letter Paper</td>
            <td>20 x 20lb reams, 10,000 sheets total will be delivered on the first Monday of each month.
              Paper dimensions are 8.5 x 11.00 inches. (Total includes 4% discount for purchase of 20 or more units)</td>
            <td>$192.00/Month (Shipping Incl.)</td>
          </tr>
          <tr>
            <td>
              <img src="/img/letterpaper.jpg" class="productPhoto" />
            </td>
            <td>Monthly Delivery - Legal Paper</td>
            <td>10 x 24 lb reams, 2,500 sheets total will be delivered on the first Monday of each month.
              Paper dimensions are 8.5 x 14.00 inches.</td>
            <td>$76.00/Month (Shipping Incl.)</td>
          </tr>
        </table>
    </div>
  </div>
  <div class="row">
    <div class="pull-right text-right totals">
      <p>
        <strong>
          Est. Monthly Charge:&nbsp;
        </strong>
        $268.00
      </p>
      <p>&nbsp;</p>

      <p>
        <strong>Shopper Email:</strong>&nbsp;&nbsp;
        <input class="input-large" type="text" id="shopperEmail" value="<%= ENV['DEFAULT_SHOPPER_EMAIL']||'carduser@example.com'%>">
      </p>

      <p>&nbsp;</p>
    </div>
  </div>
  <div class="row-fluid">
    <div class="pull-right" style="margin-left: 15px">
      <%= Apruve.button %>
    </div>
    <div class="span5 pull-right">
      Apruve makes buying stuff for work simple and safe.  Want to use a check or a PO? Want your company to pay for your
      purchase? Click the Apruve button to get started.
    </div>
  </div>
</div>

</div>
